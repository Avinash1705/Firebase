<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    tools:context=".AdminLoginActivity">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Admin_name"
            android:hint="Admin Name"/>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_below="@+id/Admin_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Admin_pass"
            android:hint="Admin Password"/>
        <Button
            android:layout_marginTop="20dp"
            android:layout_below="@+id/Admin_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Authenticate Admin"
            android:id="@+id/Authenticate_admin"/>
    </RelativeLayout>


</RelativeLayout>